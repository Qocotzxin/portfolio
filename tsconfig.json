{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@ui/*": [
        "components/ui/*"
      ],
      "@features/*": [
        "components/features/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@model/*": [
        "model/*"
      ],
      "@context/*": [
        "context/*"
      ],
      "@theme": [
        "theme"
      ]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "jest.config.js",
    "./jest-setup.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}